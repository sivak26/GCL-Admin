<?xml version="1.0" encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="greencard.admin.account.model">
	<class name="User" table="Admin">
		<id name="userId" type = "int" column="userId">
			<generator class="native" />
		</id>
		<property name="email" column="email" type="string"/>
		<property name="password" column="password" type="string" />
		<property name="firstName" column="firstName" type="string" />
		<property name="lastName" column="lastName" type="string"/>
		<property name="role" column="role" type="string"/>
		<property name="createdDate" column="createdDate" type="timestamp" />
		<property name="accountStatus" column="accountStatus" type="int"/>
		<property name="lastLoginDate" column="lastLoginDate" type="timestamp"/>
	</class>
	
	<query name="findByEmail">
		<![CDATA[from User as ad where ad.email = :email]]>
	</query>
	
	<sql-query name="SQL-findByUserId">
		<return alias="Admin" class="greencard.admin.account.model.User" />
		<![CDATA[select * from Admin as ad where ad.userId = :userId]]>
	</sql-query>
	
	<query name="findByEmailId">
		<![CDATA[from User as ad where ad.email = :email]]>
	</query>
</hibernate-mapping>